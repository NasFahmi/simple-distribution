generator client {
  provider = "prisma-client-js"
  output = "./client/client-read"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_READ")
}

model Posts {
  id Int @id @default(autoincrement())
  title String 
  content String
  created_at DateTime @default(now())
  image Image[]
}

model Image {
  id Int @id @default(autoincrement())
  name String
  path String
  postId Int
  post Posts @relation(fields: [postId],references: [id], onDelete: Cascade,onUpdate: Cascade) 
}

